<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <CodeSnippet Format="1.4.0">
    <Header>
      <SnippetTypes>
        <SnippetType>Expansion</SnippetType>
      </SnippetTypes>
      <Title>jQuery: triggerHandler(eventName, data)</Title>
      <Author>John Sheehan (@johnsheehan)</Author>
      <Shortcut>jqTriggerHandlerWithData</Shortcut>
      <HelpUrl>https://github.com/xxkylexx/Visual-Studio-jQuery-Code-Snippets</HelpUrl>
    </Header>
    <Snippet>
      <Declarations>
        <Literal>
          <ID>eventName</ID>
          <ToolTip>Name of event to trigger</ToolTip>
          <Default>eventName</Default>
        </Literal>
        <Literal>
          <ID>name</ID>
          <ToolTip>Name of property</ToolTip>
          <Default>eventName</Default>
        </Literal>
        <Literal>
          <ID>value</ID>
          <ToolTip>Property value</ToolTip>
          <Default>value</Default>
        </Literal>
      </Declarations>
      <Code Language="JavaScript">
        <![CDATA[$$($selector$).triggerHandler($eventName$, { $name$: $value$ });$end$]]>
      </Code>
    </Snippet>
  </CodeSnippet>
</CodeSnippets>
